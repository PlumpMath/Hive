<div class="follow-box box">
	<div class="follow-header "><h2>Following</h2></div>
	<div class="following-content">
		{{#Following}}
			<div class="follow-item top-divider">
				<h3 class="screen-name" >#{{UserName}}<h3>
			</div>
		{{/Following}}
	<form action="/Follow" method="post" class="new-follow form-inline top-divider"/>
	<input type="hidden" name="userID" value="{{UserID}}"/>
	<div class="input-append">
	<input type="text" placeholder="Follow User..." name="newFollow" class="input-med  follow-input center"/><button type="submit" value="submit" class="btn btn-primary">Follow</button>
	</div>
	</form>
 
	</div>
</div>

<div class="follow-box box">
	<div class="follow-header"><h2>Followers</h2></div>
	<div class="follower-content">
		{{#FollowedBy}}
			<div class="follow-item top-divider">
				<h3 class="screen-name" >#{{UserName}}<h3>
			</div>
		{{/FollowedBy}}
	</div>
</div>